<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gobierno"
    android:orientation="vertical"
    tools:context="com.example.sebax.miapp.Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Selecciona las opciones para poder ver a los cadiatos"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnPresidenciales"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:text="Pesidenciales"
            android:background="#8888"/>

        <Button
            android:background="#8888"
            android:id="@+id/btnDiputados"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Diputados"
            android:layout_marginTop="10dp"/>

        <Button
            android:background="#8888"
            android:id="@+id/btnSenadores"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            android:text="Senadores" />

        <Button
            android:background="#8888"
            android:id="@+id/btnCore"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            android:text="Core" />
    </LinearLayout>


</ScrollView>
