<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".S">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c62828">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/parlamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8888"
            android:text="Eleccion de Senadores"
            android:textColor="@android:color/background_dark"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8888"
            android:text="Selecciona tu Senador"
            android:textColor="@android:color/background_dark"
            android:textSize="25dp"
            android:textStyle="bold" />



        //Pablo Pizarro Bossay
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="29dp">

            <TextView
                android:id="@+id/TVpablo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pablo"
                android:layout_marginTop="25dp"/>
            <TextView android:id="@+id/TVbossay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Pizarro Bossay"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_marginLeft="-135dp"
                android:layout_marginTop="-0dp"
                android:layout_width="118dp"
                android:layout_height="80dp"
                android:src="@drawable/pablopizarro"/>
            <Button
                android:background="#9e9e9e9e"
                android:id="@+id/BTbosay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Vota por"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="-5dp"/>
        </LinearLayout>


